# Database Configuration
DB_CONNECTION_STRING=postgresql://username:password@localhost:5432/flexdesk
DB_HOST=localhost
DB_PORT=5432
DB_NAME=flexdesk
DB_USER=postgres
DB_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=24h

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_USER=default

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Datadog Configuration
DD_API_KEY=your_datadog_api_key
DD_APP_KEY=your_datadog_app_key
DD_AGENT_HOST=localhost
DD_AGENT_PORT=8125

# AI Agent Configuration

# LLM Provider (openai, gemini, anthropic)
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_BASE_URL=https://api.openai.com/v1

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Vector Database Configuration
VECTOR_DB_HOST=localhost
VECTOR_DB_PORT=5432
VECTOR_DB_NAME=flexdesk
VECTOR_DB_USER=postgres
VECTOR_DB_PASSWORD=your_password
VECTOR_DB_SSL=false

# RAG Configuration
EMBEDDING_MODEL=text-embedding-ada-002
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_MAX_RESULTS=5
RAG_SIMILARITY_THRESHOLD=0.7

# Security Configuration
FRAUD_DETECTION_ENABLED=true
SUSPICIOUS_PATTERN_THRESHOLD=0.8
MAX_SUSPICIOUS_ACTIVITIES=3
BLOCK_DURATION_DAYS=7

# Call Management Configuration
MAX_CONCURRENT_CALLS=10
CALL_TIMEOUT_SECONDS=300
CALL_RECORDING_ENABLED=true
CALL_RECORDING_RETENTION_DAYS=30

# Payment Configuration
PAYMENT_PROCESSING_ENABLED=true
PAYMENT_BASE_URL=https://payments.flexdesk.com
PAYMENT_WEBHOOK_SECRET=your_webhook_secret
SUPPORTED_CURRENCIES=NGN,USD,EUR

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+13252412472
TWILIO_WEBHOOK_BASE_URL=https://your-domain.com
TWILIO_VOICE_LANGUAGE=en-US
TWILIO_VOICE_GENDER=dynamic
TWILIO_VOICE_SPEED=normal

# Server Configuration
SERVER_DOMAIN=your-domain.com
NODE_ENV=development
PORT=8000
DEBUG=frontdesk:*

# Custom Capabilities (JSON format)
CUSTOM_CAPABILITIES={"custom_feature":{"description":"Custom capability","enabled":true,"tools":[]}} 